<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/screen_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/latitude"
                style="@style/MediumFont"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/latitude" />

            <TextView
                android:id="@+id/latitude_textview"
                style="@style/MsgTextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/longitude"
                style="@style/MediumFont"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="@string/longitude" />

            <TextView
                android:id="@+id/longitude_textview"
                style="@style/MsgTextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/altitude"
                style="@style/MediumFont"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="@string/altitude" />

            <TextView
                android:id="@+id/altitude_textview"
                style="@style/MsgTextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/locationAddress"
                style="@style/MediumFont"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="@string/location" />

            <TextView
                android:id="@+id/locationAddress_textview"
                style="@style/MsgTextView" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/gps_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/geo_share"
            android:layout_marginEnd="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding">

        <Button
            android:id="@+id/btn_single_fix"
            style="@style/ButtonTop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/single_location_fix"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_follow_me"
            style="@style/ButtonTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/follow_me_start"
            android:textAllCaps="false" />

        <SeekBar
            android:id="@+id/seekDistanceInterval"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:progressDrawable="@drawable/progressbar_red"
            android:thumb="@drawable/seekbar_thumb_red" />

        <SeekBar
            android:id="@+id/seekTimeInterval"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:progressDrawable="@drawable/progressbar_blue" />
    </LinearLayout>

</LinearLayout>



