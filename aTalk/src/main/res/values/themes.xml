    <style name="AppTheme_NoActionBar" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/color_primary</item>
    </style>

    <style name="AppTheme_ActionBarLight" parent="android:Widget.Holo.Light">
        <!-- <item name="android:background">#3000</item>
        <item name="background">#3000</item> -->
        <item name="android:indeterminateProgressStyle">@style/IndeterminateProgress</item>
    </style>

    <style name="AppTheme_ActionBarDark" parent="android:Widget.Holo">
        <item name="android:indeterminateProgressStyle">@style/IndeterminateProgress</item>
    </style>

    <!-- App ActionBar Themes : unable to remove alertDialog window wrapper with background value set -->
    <style name="AppTheme_ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="android:popupBackground">@color/background_dark</item>
        <item name="android:displayOptions">useLogo|showHome|homeAsUp|showCustom</item>
        <item name="android:icon">@drawable/ic_notification</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:customNavigationLayout">@layout/action_bar</item>
    </style>

    <!-- OverflowButtonStyle force to white always -->
    <style name="actionOverflowButtonStyle" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow_dark</item>
    </style>

    <style name="IndeterminateProgress" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minWidth">32dip</item>
        <item name="android:maxWidth">32dip</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:maxHeight">32dip</item>
    </style>

    <!-- ActionMode menu background color -->
    <style name="ActionMode" parent="@android:style/Widget.Holo.ActionMode">
        <item name="android:background">@color/background_dark</item>
        <item name="android:titleTextStyle">@style/TextAppearance_ActionMode_Title</item>
    </style>

    <!-- Main menu text color and size -->
    <style name="MenuItemTextAppearance">
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <!-- ActionMode menu Title text color and size -->
    <style name="TextAppearance_ActionMode_Title" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <!-- App Dialog Themes; android:windowNoTitle false to have Title -->
    <style name="Dialog_Dark" parent="@style/Theme.AppCompat.Dialog.MinWidth">
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="Dialog_Light" parent="Theme.AppCompat.Light.Dialog.MinWidth" >
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <!-- ListPreference Dialog Theme Theme.AppCompat.Dialog.Alert; android:windowNoTitle will add extra Title space -->
    <style name="AlertDialog_Dark" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:background">@color/background_dark</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
    </style>

    <style name="AlertDialog_Light" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
    </style>

    <style name="DialogWindowTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="DialogAlertDarkButtonBarStyle">
        <item name="android:background">@color/background_dark</item>
        <item name="android:textSize">22sp</item>
        <item name="dividerPadding">0dp</item>
    </style>

    <style name="AppTheme_Transparent" parent="@android:style/Theme.NoDisplay" />

