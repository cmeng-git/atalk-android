<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/screen_padding">

    <TextView
        android:id="@+id/textMsgView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/invitation_received"
        android:textAppearance="@style/MediumFont" />

    <TextView
        android:id="@+id/textInvitationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/invitation_message"
        android:textAppearance="@style/MediumFont"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/textInvitation"
        style="@style/EntryTextView"
        android:layout_width="match_parent"
        android:text="@string/invite_group_chat"
        android:enabled="false" />

    <TextView
        android:id="@+id/textReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/invite_reject_reason"
        android:textAppearance="@style/MediumFont"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/rejectReasonTextArea"
        style="@style/EntryTextView"
        android:layout_width="match_parent"
        android:hint="@string/invite_reject_busy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_Ignore"
            style="@style/ButtonTop"
            android:enabled="true"
            android:text="@string/ignore" />

        <Button
            android:id="@+id/button_Reject"
            style="@style/ButtonTop"
            android:enabled="true"
            android:text="@string/decline"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"/>

        <Button
            android:id="@+id/button_Accept"
            style="@style/ButtonTop"
            android:enabled="true"
            android:text="@string/accept" />
    </LinearLayout>

</LinearLayout>