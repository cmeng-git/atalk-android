<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@android:id/text1"
        style="@style/MediumFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="@string/sec_protocols_message" />

    <org.atalk.android.gui.widgets.TouchInterceptor

        android:id="@android:id/list"
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="1"

        android:drawSelectorOnTop="false"
        android:fastScrollEnabled="true"
        custom:dragRegionEndX="@dimen/enc_list_drag_e_x"
        custom:dragRegionStartX="@dimen/enc_list_drag_s_x"
        custom:itemExpandedHeight="@dimen/expanded_item_height"
        custom:itemHeight="@dimen/list_item_height" />
</LinearLayout>