<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/contact_list_group_row_height"
    android:background="@color/contact_list_group"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:gravity="left|center"
        android:text="@string/remove_group"
        android:textColor="@color/textColorWhite"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/contact_list_divider" />

    <LinearLayout
        android:layout_width="7dp"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:background="@drawable/chat_separator" />

    <ImageView
        android:id="@+id/groupIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:src="@drawable/collapsed_dark" />

</RelativeLayout>